{
  "name": "imap-sdk",
  "version": "1.0.0",
  "description": "IMAP SDK for Node",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Marco Technology Inc.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marcoappio/imap-sdk"
  },
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:docs": "typedoc",
    "lint": "biome check . --error-on-warnings",
    "release": "bun run build && auto shipit",
    "test": "vitest --run",
    "typecheck": "tsc -noEmit --incremental"
  },
  "license": "MIT",
  "files": [
    "dist/",
    "docs/",
    "README.md"
  ],
  "auto": {
    "plugins": [
      "npm"
    ]
  },
  "dependencies": {
    "@zone-eu/mailsplit": "5.4.8",
    "date-fns": "4.1.0",
    "encoding-japanese": "2.2.0",
    "iconv-lite": "0.7.0",
    "libbase64": "1.3.0",
    "libmime": "5.3.7",
    "libqp": "2.1.1",
    "nodemailer": "7.0.11",
    "socks": "2.8.7",
    "xstate": "5.25.0"
  },
  "devDependencies": {
    "@auto-it/npm": "11.2.0",
    "@biomejs/biome": "2.3.0",
    "@types/libmime": "5.3.0",
    "@types/node": "24.9.0",
    "auto": "11.2.0",
    "jsdoc": "4.0.4",
    "prettier": "3.7.4",
    "st": "3.0.3",
    "tsc-alias": "1.8.16",
    "typedoc-plugin-markdown": "4.9.0",
    "typedoc": "0.28.15",
    "typescript": "5.9.3",
    "ultracite": "6.4.1",
    "vitest": "4.0.16"
  }
}
